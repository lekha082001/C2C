<h3>What is Razor?</h3>
<h4>ANS: AnyLanguage + Html. In our case, C# + Html</h4>
<hr />
<h5>To add C# code to Html, use Attribute-the-rate symbol, at-the-rate with brace brackets for multi-line C# code</h5>
<hr/>
@{
    var message = "Hello Razor!";
}<input type="text" value=@message/>
<br/>
<button onclick="alert('Ok)">Ok</button>
<span style="background-color:green;color:yellow">@ViewBag.ReturnValue</span>
<hr/>

@{
    List<string> names = new List<string>();
    names.Add("Eena");
    names.Add("Meena");
    names.Add("Deeka");
}
<table>
    <tr>
        <td>Name</td>
        </tr>

@foreach(var name in names)
{
    <tr>
        <td>
    @Html.TextBoxFor(n=>name);
            </td>
        </tr>
}
</table>